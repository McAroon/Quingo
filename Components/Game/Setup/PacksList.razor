@page "/game/setup/packs"

@using Microsoft.AspNetCore.Authorization
@using System.Security.Claims

@inject ApplicationDbContext Db

@attribute [Authorize]

<PageTitle>Packs</PageTitle>

<h1>Packs</h1>

@if (Packs == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <div class="row">
        <div class="mb-3 w-75">
            <a href="game/setup/pack" class="btn btn-primary">New Pack</a>
        </div>
    </div>
    <div class="row">
        @foreach (var pack in Packs)
        {
            <div class="col-sm-12 col-md-6 col-lg-3 mb-3">
                <div class="card">
                    @if (!string.IsNullOrEmpty(pack.ImageUrl))
                    {
                        <img src="@pack.ImageUrl" class="card-img-top" alt="Logo">
                    }
                    <div class="card-body">
                        <h5 class="card-title">@pack.Name</h5>
                        @if (pack.Description != null)
                        {
                            <p class="card-text">@pack.Description</p>
                        }

                        @if (pack.CreatedByUserId == UserId)
                        {
                            <a href="game/setup/pack/@pack.Id" class="btn btn-primary">Edit</a>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
}
@code {
    [CascadingParameter]
    private HttpContext HttpContext { get; set; } = default!;

    public List<Pack>? Packs { get; set; }

    public string? UserId { get; set; }

    protected override async Task OnInitializedAsync()
    {
        Packs = await Db.Packs.ToListAsync();
        UserId = HttpContext?.User?.FindFirstValue(ClaimTypes.NameIdentifier);
    }
}
