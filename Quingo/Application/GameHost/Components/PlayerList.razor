<MudTable Items="Game.Players">
    <HeaderContent>
        <MudTh>Name</MudTh>
        <MudTh>Lives</MudTh>
        <MudTh>Actions</MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd DataLabel="Name">@context.PlayerName</MudTd>
        <MudTd DataLabel="Lives">@context.LivesNumber</MudTd>
        <MudTd DataLabel="Actions"></MudTd>
    </RowTemplate>
</MudTable>

@code {
    [CascadingParameter]
    public GameState Game { get; set; } = default!;
}
