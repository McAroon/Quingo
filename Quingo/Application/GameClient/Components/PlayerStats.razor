<table class="dl-table">
    <tr>
        <th>Game State</th>
        <td>@State.GameState.StateDisplayValue</td>
    </tr>
    @if (State.GameState.Preset.LivesNumber > 0 && State.GameState.Preset.EnableCall)
    {
        <tr>
            <th>Lives</th>
            <td>@State.LivesNumber</td>
        </tr>
    }
    @if (State.GameState.ShowTimer)
    {
        <tr>
            <th>Game Timer</th>
            <td>@TimeSpan.FromSeconds(State.GameState.Timer.Value).ToStringHoursOptional()</td>
        </tr>
    }
    @if (State.GameState.WinningPlayers.Count > 0)
    {
        <tr>
            <th>@(State.GameState.WinningPlayers.Count == 1 ? "Winner" : "Winners")</th>
            <td>@string.Join(", ", State.GameState.WinningPlayers.Select(x => x.PlayerName))</td>
        </tr>
    }
    @if (State.GameState.State is GameStateEnum.Finished or GameStateEnum.Canceled)
    {
        <tr>
            <th>Score</th>
            <td>@State.Score</td>
        </tr>
    }
</table>

@code {
    [CascadingParameter]
    public PlayerState State { get; set; } = default!;
}
