<MudGrid>
    <MudItem xs="12" md="6">
        <PlayerActionBar />
    </MudItem>
    <MudItem xs="12" md="6">
        <PlayerStats />
    </MudItem>
    <MudItem xs="12" md="8">
        <MudText Typo="Typo.h5" GutterBottom>Draw History (@Player.GameState.DrawnNodes.Count / @Player.GameState.QuestionCount)</MudText>
        <QuestionList Game="Player.GameState" ShowDetails="ShowDetails" />
    </MudItem>
    <MudItem xs="12">
        <MudText Typo="Typo.h5" GutterBottom>Player Card</MudText>
        <PlayerCard ShowDetails="ShowDetails" />
    </MudItem>
    <MudItem xs="12" md="6">
        <MudText Typo="Typo.h5" GutterBottom>Players</MudText>
        <CascadingValue Value="Player.GameState">
            <PlayerList Player="Player" />
        </CascadingValue>
    </MudItem>
</MudGrid>

@code {
    [CascadingParameter]
    public PlayerState Player { get; set; } = default!;

    private bool ShowDetails => Player.GameState.State is GameStateEnum.Finished or GameStateEnum.Canceled;
}
