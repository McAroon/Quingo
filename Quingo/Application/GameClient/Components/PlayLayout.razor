<MudGrid>
    <MudItem xs="12" md="6">
        <PlayerActionBar />
    </MudItem>
    <MudItem xs="12" md="6">
        <PlayerStats />
    </MudItem>
    <MudItem xs="12">
        <MudText Typo="Typo.h5" GutterBottom>Draw History (@State.GameState.DrawnNodes.Count / @State.GameState.QuestionCount)</MudText>
        <QuestionList Game="State.GameState" ItemsToDisplay="10" />
    </MudItem>
    <MudItem xs="12">
        <MudText Typo="Typo.h5" GutterBottom>Player Card</MudText>
        <PlayerCard />
    </MudItem>
</MudGrid>

@code {
    [CascadingParameter]
    public PlayerState State { get; set; } = default!;
}
